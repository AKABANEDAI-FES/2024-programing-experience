datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         String       @id
  email      String
  signInName String
  createdAt  DateTime
  isAdmin    Boolean
  language   LanguageEnum
  tasks      Task[]
  UserQuest  UserQuest[]
  Quest      Quest[]
}

enum LanguageEnum {
  KANJI
  HIRAGANA
  ENGLISH
}

model QuestGroup {
  id          String  @id
  name        String
  description String
  Quest       Quest[]
}

model Quest {
  id                 String      @id
  name               String
  description        String
  backgroundImageKey String?
  exampleAnswer      Json
  createdAt          DateTime
  updatedAt          DateTime?
  indexInGroup       Int
  UserQuest          UserQuest[]
  Author             User        @relation(fields: [authorId], references: [id])
  authorId           String
  QuestGroup         QuestGroup? @relation(fields: [questGroupId], references: [id])
  questGroupId       String?
}

model UserQuest {
  id              String            @id
  UserQuestResult UserQuestResult[]
  user            User              @relation(fields: [userId], references: [id])
  userId          String
  quest           Quest             @relation(fields: [questId], references: [id])
  questId         String
}

model UserQuestResult {
  id          String    @id
  userQuest   UserQuest @relation(fields: [userQuestId], references: [id])
  userQuestId String
  startAt     DateTime
  endAt       DateTime
  score       Int
  answer      Json
}

model Task {
  id        String   @id
  label     String
  done      Boolean
  imageKey  String?
  createdAt DateTime
  Author    User     @relation(fields: [authorId], references: [id])
  authorId  String
}
